// -*- mode: jsonc -*-
{
    "position": "bottom",
    "spacing": 4,
    "height": 25,
    "reload_style_on_change": false, // only true when changing styles
    "modules-left": [
        "custom/appmenu",
        "backlight",
        "pulseaudio#sink",
        "pulseaudio#source",
        "idle_inhibitor",
        "network",
        "tray"
    ],
    "modules-center": [
        "sway/mode",
        "sway/scratchpad",
        "sway/workspaces"
    ],
    "modules-right": [
        "group/hardware",
        "group/battery-info",
        "clock",
        "group/powerctl"
    ],
    "sway/mode": {
        "tooltip": false
    },
    "sway/scratchpad": {
        "format": "{count} {icon}",
        "format-icons": "󱟱"
    },
    "tray": {
        "spacing": 4
    },
    "network": {
        "format-wifi": "{essid} {signalStrength}% ",
        "format-ethernet":"{ipaddr}/{cidr} ",
        "format-disconnected": "󰲛",
        "tooltip-format-wifi": "{bandwidthDownBits}  {bandwidthUpBits}  ",
        "tooltip-format-ethernet": "{bandwidthDownBits}  {bandwidthUpBits}  ",
        "tooltip-disconnected": "Net disconnected",
        "interval": 20
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip-format-activated": "Idle off",
        "tooltip-format-deactivated": "Idle on",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
        "tooltip": false
    },
    "pulseaudio#sink": {
        "format": "{volume}% {icon}",
        "format-icons": {
            "headphone": "󰋎",
            "default": ["󰕿", "󰖀", "󰕾"]
        },
        "format-muted": "󰝟",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "pulseaudio#source": {
        "format": "{format_source}",
        "format-source": "{volume}% 󰍬",
        "format-source-muted": "󰍭",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%-",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%+"
    },
    "disk": {
         "format": "{used}/{total} 󰆦",   
         "tooltip-format": "{path} has {free} free",
    },
    "memory": {
        "format": "{percentage}% {icon}",
        "format-icons": "󰌨"
    },
    "cpu": {
        "format": "{usage}% {icon}",
        "format-icons": "󰍛"
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "interval": 5,
        "format-charging": "{capacity}% 󰂄",
        "states": { "warning": 30, "critical": 15 },
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
    },
    "clock": {
        "format": "{:%H:%M %a %Y-%m-%d}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "format": {
                "months":   "<span color='#fbf1c7'>{}</span>",
                "weekdays": "<span color='#fabd2f'>{}</span>",
                "days":     "<span color='#fbf1c7'>{}</span>",
                "today":    "<span color='#d65d0e'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click": "shift_reset",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "group/battery-info": {
        "orientation": "horizontal",
        "modules": ["battery", "custom/powergov"]
    },
    "group/hardware": {
        "orientation": "horizontal",
        "modules": ["disk", "memory", "cpu"]
    },
    "group/powerctl": {
        "orientation": "inherit",
        "modules": [
            "custom/lock",
            "custom/quit",
            "custom/reboot",
            "custom/power",
        ]
    },
    "custom/powergov": {
        "exec": "~/.local/bin/kript powergov 30 15",
        "interval": 3,
        "hide-empty-text": true,
    },
    "custom/quit": {
        "format": "󰗼",
        "tooltip-format": "Exit Wayland",
        "on-click": "~/.local/bin/kript powerctl session-exit"
    },
    "custom/lock": {
        "format": "󰍁",
        "tooltip-format": "Lock screen",
        "on-click": "~/.local/bin/kript powerctl lock"
    },
    "custom/reboot": {
        "format": "󰜉",
        "tooltip-format": "Reboot",
        "on-click": "~/.local/bin/kript powerctl reboot"
    },
    "custom/power": {
        "format": "",
        "tooltip-format": "Shutdown",
        "on-click": "~/.local/bin/kript powerctl shutdown"
    },
    "custom/appmenu": {
        "format": "󰍜",
        "tooltip-format": "Apps",
        "on-click": "~/.local/bin/kript appmenu"
    }
}
